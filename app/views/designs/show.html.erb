<%= content_tag :div, class: 'row' do %>

  <%= content_tag :h1, "#{@design.name} <small>#{@design.sku}</small>".html_safe %>

  <h2>Variants</h2>
  <%= render partial: 'variant', collection: @design.variants %>

  <%= content_tag :h2, 'Descriptions' %>

  <%= content_tag :div, class: 'panel panel-default' do %>
    <% if @design.descriptions.any? %>

      <% @design.descriptions.each do |desc| %>
        <%= content_tag :div, class: 'panel-heading' do %>
          <%= content_tag :h3, desc.websites.map { |w| w.name }.join(', '), class: 'panel-title' %>
        <% end %>
        <%= content_tag :div, class: 'panel-body' do %>
          <%= content_tag :p, desc.description %>
        <% end %>
      <% end %>

    <% else %>

      <%= content_tag :div, class: 'panel-body' do %>
        <%= content_tag :p, 'No descriptions for this design.', class: 'lead' %>
      <% end %>

    <% end %>
  <% end %>

  <%= content_tag :h2, 'Properties' %>

  <%= content_tag :div, class: 'panel panel-default' do %>
    <% if @design.design_properties.any? %>
      <%= content_tag :dl, class: 'dl-horizontal panel-body' do %>
        <%= render partial: 'design_property', collection: @design.design_properties %>
      <% end %>
    <% else %>
      <%= content_tag :div, class: 'panel-body' do %>
        <%= content_tag :p, 'No properties for this design.', class: 'lead' %>
      <% end %>
    <% end %>
  <% end %>



  <%= debug @design %>
<% end %>
