<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Collections', admin_collections_path), 'New Collection'].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-12' do %>
    <%= form_for [:admin, @collection], html: { multipart: true } do |f| %>
        <%= field_set_tag nil, 'data-hook': 'collection_edit' do %>
            <%= render partial: 'form', locals: { f: f } %>
        <% end %>

        <%= form_buttons admin_collections_path %>
    <% end %>
<% end %>
