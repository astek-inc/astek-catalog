<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Collections', admin_collections_path), @collection.name].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
    <%= content_tag :div, class: 'col-md-9' do %>
        <%= form_for [:admin, @collection], html: { multipart: true } do |f| %>
            <%= field_set_tag nil, 'data-hook': 'collection_edit' do %>
                <%= render partial: 'form', locals: { f: f } %>
            <% end %>

            <%= content_tag :div, class: 'form-actions' do %>
                <%= button_tag 'Submit' %>
            <% end %>
        <% end %>
    <% end %>

    <%= content_tag :div, class: 'col-md-3' do %>
        <%= render partial: 'subnav', locals: { current: 'details' } %>
    <% end %>
<% end %>
