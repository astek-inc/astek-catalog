<% content_for :header_left do %>
  <%= content_tag :h1, [
      link_to('Substrate Categories', admin_substrate_categories_path),
      'New Substrate Category'
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-12' do %>
    <%= form_for [:admin, @substrate_category] do |f| %>
      <%= field_set_tag nil, 'data-hook': 'substrate_category_new' do %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>

      <%= form_buttons admin_substrate_categories_path %>
    <% end %>
  <% end %>
<% end %>
