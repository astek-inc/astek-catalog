<% content_for :header_left do %>
  <%= content_tag :h1, 'Keywords' %>
<% end %>

<% content_for :header_right do %>
  <%= link_to 'New Keyword', new_admin_keyword_path, class: 'btn btn-success' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<div>

  <% if @keywords.any? %>

    <%= paginate @keywords %>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th class="actions"></th>
        </tr>
        </thead>

        <tbody>
        <% @keywords.each do |keyword| %>
          <tr class="product_property fields" data-hook="keyword">
            <td><%= keyword.name %></td>
            <td class="actions">
              <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                <%= edit_button edit_admin_keyword_path keyword %>
                <%= delete_button admin_keyword_path keyword %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <%= paginate @keywords %>

  <% else %>
    <p>No keywords found. <%= link_to 'Create one.', new_admin_keyword_path %></p>
  <% end %>

</div>
