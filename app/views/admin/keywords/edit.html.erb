<% content_for :header_left do %>
  <%= content_tag(:h1, [
      link_to('Keywords', admin_keywords_path),
      @keyword.name
  ].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
  <%= form_with(model: [:admin, @keyword], local: true) do |f| %>
    <%= field_set_tag nil, 'data-hook': 'keyword_edit' do %>
      <%= render partial: 'form', locals: { f: f } %>
    <% end %>

    <%= form_buttons admin_keywords_path %>
  <% end %>
<% end %>
