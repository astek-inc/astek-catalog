<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Sites', admin_sites_path), @site.name].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, @site] do |f| %>
        <%= field_set_tag nil, 'data-hook': 'site_edit' do %>
            <%= render partial: 'form', locals: { f: f } %>
        <% end %>

        <%= form_buttons admin_sites_path %>
    <% end %>
<% end %>
