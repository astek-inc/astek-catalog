<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Product Categories', admin_product_categories_path), 'New Product Type Group'].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-12' do %>
    <%= form_for [:admin, @product_category], html: { multipart: true } do |f| %>
        <%= field_set_tag nil, 'data-hook': 'product_category_new' do %>
            <%= render partial: 'form', locals: { f: f } %>
        <% end %>

        <%= form_buttons admin_product_categories_path %>
    <% end %>
<% end %>
