<% content_for :header_left do %>
  <%= content_tag :h1, [
      link_to('Collections', admin_collections_path(@collection)),
      link_to(@collection.name, admin_collection_path(@collection)),
      link_to('Design Aliases', admin_collection_design_aliases_path(@collection)),
      'Edit Design Alias'
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-9' do %>

    <%= form_for [:admin, @collection, @design_alias] do |f| %>
      <%= field_set_tag nil, 'data-hook': 'design_alias_edit' do %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>

      <%= form_buttons admin_collection_design_aliases_path(@collection) %>
    <% end %>

  <% end %>

  <%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/collections/subnav', locals: { current: 'design_aliases' } %>
  <% end %>
<% end %>
