<% content_for :header_left do %>
  <%= content_tag :h1, [
      'Lead Times'
  ].join(' / ').html_safe %>
<% end %>

<% content_for :header_right do %>
  <%= link_to 'New Lead Time', new_admin_lead_time_path, class: 'btn btn-success' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-12' do %>

    <% if @lead_times.any? %>
      <%= content_tag :div, class: 'table-responsive' do %>
        <table class="table table-striped sortable" data-hook data-sortable-link="<%= update_row_order_admin_lead_times_path %>" data-position-start="<%= @position_start %>">          <thead>
          <tr>
            <th class="move-handle"></th>
            <th>Name</th>
            <th>Description</th>
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @lead_times.each do |lead_time| %>
            <tr class="lead_time fields" data-item-id=<%= "#{lead_time.id}" %> data-hook="lead_time">
              <td class="move-handle text-center">
                <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
              </td>
              <td><%= lead_time.name %></td>
              <td><%= truncate(sanitize(lead_time.description), length: 140) %></td>
              <td class="actions">
                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                  <%= edit_button edit_admin_lead_time_path lead_time %>
                  <%= delete_button admin_lead_time_path lead_time %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>

    <% else %>
      <p>No lead times found. <%= link_to 'Create one.', new_admin_lead_time_path %></p>
    <% end %>

  <% end %>
<% end %>
