<% content_for :header_left do %>
  <%= content_tag :h1, [
    link_to('Categories', admin_categories_path(@category)),
    link_to(@category.name, admin_category_path(@category)),
    link_to('Images', admin_category_category_images_path(@category)),
    @category_image.file_identifier
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
  <%= image_tag(@category_image.file.url(:large)) %>
<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
  <%= render partial: 'admin/categories/subnav', locals: { current: 'images' } %>
<% end %>
