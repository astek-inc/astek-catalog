<% content_for :header_left do %>
    <%= content_tag :h1,
                    [link_to('Categories', admin_categories_path),
                     link_to(@category.name, admin_category_path(@category)),
                     link_to('Images', admin_category_category_images_path(@category)),
                     'New Image'].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, :category, @category_image], html: { multipart: true } do |f| %>
        <%= field_set_tag nil, 'data-hook': 'category_image_new' do %>
            <%= content_tag :div, class: ['form-group'] do %>
                <%= f.label :file, 'Image' %> <span class="required">*</span>
                <%= f.file_field :file, required: true, class: 'form-control' %>
                <%= f.hidden_field :image_type, value: @category_image.class.name %>
                <%= f.hidden_field :owner_id, value: @category.id %>
                <%#= f.hidden_field :image_cache %>
            <% end %>
        <% end %>

        <%= content_tag :div, class: 'form-actions' do %>
            <%= button_tag 'Submit' %>
            <%#= button_tag 'Cancel' %>
        <% end %>
    <% end %>
<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/categories/subnav', locals: { current: 'images' } %>
<% end %>
