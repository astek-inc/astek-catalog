<% content_for :header_left do %>
  <%= content_tag :h1, link_to('Users', admin_users_path) %>
<% end %>

<% content_for :header_right do %>
    <%= link_to 'New User', new_admin_user_path, class: 'btn btn-default' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div do %>

  <% if @users.any? %>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Email</th>
            <th>Date Created</th>
            <th>Last Signed In</th>
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr class="user_property fields" data-item-id=<%= "#{user.id}" %> data-hook="user">
                <td><%= user.email %></td>
                <td><%= user.created_at %></td>
                <td><%= user.last_sign_in_at %></td>
                <td class="actions">
                  <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                    <%= edit_button edit_admin_user_path user %>
                    <%= delete_button admin_user_path user %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

  <% else %>
    <p>No users found. <%= link_to 'Create one.', new_admin_user_path %></p>
  <% end %>

<% end %>
