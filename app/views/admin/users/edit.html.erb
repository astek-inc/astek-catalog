<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Users', admin_users_path), @user.email].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, @user] do |f| %>
        <%= field_set_tag nil, 'data-hook': 'user_edit' do %>
            <%= render partial: 'form', locals: { f: f } %>
        <% end %>

        <%= form_buttons admin_users_path %>
    <% end %>
<% end %>
