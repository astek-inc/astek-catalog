<% content_for :header_left do %>
  <%= content_tag :h1, [
      link_to('Variant Types', admin_variant_types_path),
      @variant_type.name
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, @variant_type] do |f| %>
      <%= field_set_tag nil, 'data-hook': 'variant_type_new' do %>
        <%= render partial: 'form', locals: { f: f } %>
      <% end %>

      <%= form_buttons admin_variant_types_path %>
    <% end %>
  <% end %>
<% end %>
