<% content_for :header_left do %>
  <%= content_tag :h1, [
    link_to('Substrates', admin_substrates_path),
    link_to(@substrate.name, edit_admin_substrate_path(@substrate)),
    'Print Images'
  ].join(' / ').html_safe %>
<% end %>

<% content_for :header_right do %>
    <%= link_to 'New Print Image', new_admin_substrate_substrate_print_image_path(@substrate), class: 'btn btn-success' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>

  <% if @substrate.substrate_print_images.any? %>

      <div class="table-responsive">
        <table class="table table-striped sortable" data-hook data-sortable-link="<%= update_row_order_admin_substrate_substrate_print_images_path %>" data-position-start="<%= @position_start %>">
          <thead>
          <tr>
            <th class="move-handle"></th>
            <th>Image</th>
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @substrate.substrate_print_images.each do |image| %>
              <tr class="substrate_print_image fields" data-item-id="<%= image.id %>" data-hook="substrate_print_image">
                <td class="move-handle text-center">
                  <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
                </td>
                <td><%= image_tag(image.file.url(:thumb)) %></td>

                <td class="actions">
                  <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                    <%= view_button admin_substrate_substrate_print_image_path @substrate, image %>
                    <%= delete_button admin_substrate_substrate_print_image_path @substrate, image %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

  <% else %>
      <p>No images found. <%= link_to 'Create one.', new_admin_substrate_substrate_print_image_path %></p>
  <% end %>

<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/substrates/subnav', locals: { current: 'print_images' } %>
<% end %>
