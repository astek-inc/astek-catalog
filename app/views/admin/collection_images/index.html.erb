<% content_for :header_left do %>
    <%= content_tag :h1,
                    [link_to('Collections', admin_collections_path),
                     link_to(@collection.name, edit_admin_collection_path(@collection)),
                     'Images'].join(' / ').html_safe %>
<% end %>

<% content_for :header_right do %>
    <%= link_to 'New Image', new_admin_collection_collection_image_path(@collection), class: 'btn btn-default' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>

  <% if @collection.collection_images.any? %>

      <div class="table-responsive">
        <table class="table table-striped sortable" data-hook data-sortable-link="<%= update_row_order_admin_collection_collection_images_path %>" data-position-start="<%= @position_start %>">
          <thead>
          <tr>
            <th class="move-handle"></th>
            <th>Image</th>
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @collection.collection_images.each do |image| %>
              <tr class="collection_image fields" data-item-id="<%= image.id %>" data-hook="collection_image">
                <td class="move-handle text-center">
                  <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
                </td>
                <td><%= image_tag(image.file.url(:thumb)) %></td>

                <td class="actions">
                  <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                    <%= delete_button [@collection, image] %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

  <% else %>
      <p>No images found. <%= link_to 'Create one.', new_admin_collection_collection_image_path %></p>
  <% end %>

<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/collections/subnav', locals: { current: 'images' } %>
<% end %>
