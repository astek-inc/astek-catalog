<% content_for :header_left do %>
  <%= content_tag :h1, [
      'Substrates'
  ].join(' / ').html_safe %>
<% end %>

<% content_for :header_right do %>
  <%= link_to 'New Substrate', new_admin_substrate_path, class: 'btn btn-success' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-12' do %>

    <% if @substrates.any? %>
      <%= content_tag :div, class: 'table-responsive' do %>
        <table class="table table-striped sortable" data-hook data-sortable-link="<%= update_row_order_admin_substrates_path %>" data-position-start="<%= @position_start %>">
          <thead>
          <tr>
            <th class="move-handle"></th>
            <th>Name</th>
            <th>Description</th>
            <!--<th>Slug</th>-->
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @substrates.each do |substrate| %>
            <tr class="product_property fields" data-item-id=<%= "#{substrate.id}" %> data-hook="substrate">
              <td class="move-handle text-center">
                <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
              </td>
              <td><%= substrate.name %></td>
              <td><%= truncate(sanitize(substrate.description), length: 140) %></td>
              <!--<td><%#= substrate.slug %></td>-->

              <td class="actions">
                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                  <%= edit_button edit_admin_substrate_path substrate %>
                  <%= delete_button admin_substrate_path substrate %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>

      <%= paginate @substrates %>

    <% else %>
      <p>No substrates found. <%= link_to 'Create one.', new_admin_substrate_path %></p>
    <% end %>

  <% end %>
<% end %>
