<% content_for :header_left do %>
  <%= content_tag :h1, [
      link_to('Substrates', admin_substrates_path),
      @substrate.name
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, @substrate] do |f| %>
      <%= field_set_tag nil, 'data-hook': 'substrate_edit' do %>
        <%= content_tag :div, class: 'panel panel-default' do %>
          <%= content_tag :div, 'Categories', class: 'panel-heading' %>
          <%= content_tag :div, class: 'panel-body' do %>
            <%= collection_check_boxes(:substrate, :substrate_category_ids, @substrate_categories, :id, :name) do |b| %>
              <%= content_tag :div, class: 'checkbox-inline' do %>
                <%= b.label() { b.check_box + b.text } %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        <%#= debug @substrate.substrate_categories %>
      <% end %>

      <%= form_buttons admin_substrates_path %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/substrates/subnav', locals: { current: 'categories' } %>
  <% end %>
<% end %>



