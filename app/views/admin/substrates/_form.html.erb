
<%= content_tag :div, class: ['form-group'] do %>
  <%= f.label(:name, 'Name <span class="required">*</span>'.html_safe) %>
  <%= f.text_field :name, required: true, class: 'form-control' %>
<% end %>

<%= content_tag :div, class: ['form-group'] do %>
  <%= f.label(:name, 'Description') %>
  <%= f.text_area :description, rows: 6, class: 'form-control' %>
<% end %>

<%= content_tag :div, class: ['form-group'] do %>
  <%= f.label(:name, 'Keywords') %>
  <%= f.text_area :keywords, rows: 3, class: 'form-control' %>
<% end %>

<% if @substrate.persisted? %>
  <%= content_tag :div, class: ['form-group'] do %>
    <%= f.label(:name, 'Slug <span class="required">*</span>'.html_safe) %>
    <%= f.text_field :slug, required: true, class: 'form-control' %>
  <% end %>
<% end %>

<%= field_set_tag nil, 'data-hook': 'substrate_edit' do %>
  <%= content_tag :div, class: 'panel panel-default' do %>
    <%= content_tag :div, 'Categories', class: 'panel-heading' %>
    <%= content_tag :div, class: 'panel-body' do %>
      <%= collection_check_boxes(:substrate, :substrate_category_ids, @substrate_categories, :id, :name) do |b| %>
        <%= content_tag :div, class: 'checkbox-inline' do %>
          <%= b.label() { b.check_box + b.text } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :div, class: ['form-group'] do %>
  <%= f.label :backing_type, 'Backing Type' %>
  <%= f.collection_select :backing_type_id, BackingType.all, :id, :name, { prompt: 'Select' }, { class: 'form-control' } %>
<% end %>
