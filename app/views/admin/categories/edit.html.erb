<% content_for :header_left do %>
    <%= content_tag(:h1, [link_to('Categories', admin_categories_path), @category.name].join(' / ').html_safe) %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
    <%= form_for [:admin, @category], html: { multipart: true } do |f| %>
        <%= field_set_tag nil, 'data-hook': 'category_edit' do %>
            <%= render partial: 'form', locals: { f: f } %>
        <% end %>

        <%= form_buttons admin_categories_path %>
    <% end %>
<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
    <%= render partial: 'admin/categories/subnav', locals: { current: 'details' } %>
<% end %>
