<% content_for :header_left do %>
  <%= content_tag :h1, link_to('Categories', admin_categories_path) %>
<% end %>

<% content_for :header_right do %>
    <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-success' %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<div>

  <% if @categories.any? %>

      <div class="table-responsive">
        <table class="table table-striped sortable" data-hook data-sortable-link="<%= update_row_order_admin_categories_path %>" data-position-start="<%= @position_start %>">
          <thead>
          <tr>
            <th class="move-handle"></th>
            <th>Name</th>
            <th>Description</th>
            <th>Visibility</th>
            <th class="actions"></th>
          </tr>
          </thead>

          <tbody>
          <% @categories.each do |category| %>
              <tr class="product_property fields" data-item-id=<%= "#{category.id}" %> data-hook="category">
                <td class="move-handle text-center">
                  <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
                </td>
                <td><%= category.name %></td>
                <td><%= truncate(sanitize(category.description), length: 140) %></td>
                <td><%= category.sites.map { |w| w.name }.join(', ') %></td>
                <td class="actions">
                  <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                    <%= edit_button edit_admin_category_path category %>
                    <%= delete_button admin_category_path category %>
                  </div>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @categories %>

  <% else %>
    <p>No categories found. <%= link_to 'Create one.', new_admin_category_path %></p>
  <% end %>

</div>
