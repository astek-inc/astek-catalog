<% content_for :header_left do %>
  <%= content_tag :h1, [
      'SKU Tools',
      link_to('Next Available SKU in Series', next_available_admin_skus_path)
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'row' do %>
  <%= content_tag :div, class: 'col-md-9' do %>

    <%= content_tag :div, class: 'panel panel-default' do %>

      <%= content_tag :div, class: 'panel-heading' do %>
        <h3 class="panel-title">Prefix <%= @prefix.prefix %></h3>
      <% end %>

      <%= content_tag :div, class: 'panel-body' do %>
        <p><%= @prefix.description %></p>
        <p>The next available SKU in the series "<%= @prefix.prefix %>" is <strong><%= @next_available_sku %></strong>.</p>
      <% end %>

    <% end %>

  <% end %>
<% end %>
