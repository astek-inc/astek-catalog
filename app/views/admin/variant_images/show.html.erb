<% content_for :header_left do %>
  <%= content_tag :h1, [
    link_to('Variants', admin_variants_path(@variant)),
    link_to(@variant.name, edit_admin_design_variant_path(@design, @variant)),
    link_to('Images', admin_variant_variant_images_path(@variant)),
    @variant_image.file_identifier
  ].join(' / ').html_safe %>
<% end %>

<%= render partial: 'admin/shared/header' %>

<%= content_tag :div, class: 'col-md-9' do %>
  <%= image_tag(@variant_image.file.url(:large)) %>
<% end %>

<%= content_tag :div, class: 'col-md-3' do %>
  <%= render partial: 'admin/variants/subnav', locals: { current: 'images' } %>
<% end %>
